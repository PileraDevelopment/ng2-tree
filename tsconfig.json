{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "dom"],
    "module": "esnext"
  },
  "exclude": ["./index.ts"]
}
